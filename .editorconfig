# Drupal editor configuration normalization
# @see http://editorconfig.org/

# This is the top-most .editorconfig file; do not search in parent directories.
root = true

# All files.
[*.php]
end_of_line = LF
indent_style = tab
indent_size = 4
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
php_diagnostic_php6401 = false
php_diagnostic = true

[*.md]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[*.conf]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[docker-compose.yml]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[*.lua]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[*.sql]
end_of_line = LF
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

[*.yml]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false